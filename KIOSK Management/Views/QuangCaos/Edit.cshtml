@model KIOSK_Management.Models.QuangCao

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "QuangCaos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>QuangCao</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaQC)

        <div class="form-group">
            @Html.LabelFor(model => model.NoiDung, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="NoiDung" class="form-control" maxlength="200" value="@Model.NoiDung" />
                @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="HinhAnh" name="HinhAnh" class="form-control" readonly value="@Model.HinhAnh" />
                <img class="img-responsive" src="~/Images/QuangCao/@Model.HinhAnh" alt="@Model.HinhAnh" style="display:block; max-width:300px">
                <div id="btnClearImage" class="btn btn-outline-secondary form-control" style="max-width:280px;">Clear</div>
                <input type="file" name="HinhAnh" class="form-control-file" />
                @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ThoiLuong, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="number" min="0" step="1" name="ThoiLuong" class="form-control" style="display:inline-block" required value="@Model.ThoiLuong" /> giây
                @Html.ValidationMessageFor(model => model.ThoiLuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $("#btnClearImage").click(function () {
                $("#HinhAnh").val(null);
            });
        });
    </script>
}
